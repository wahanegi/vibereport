{
  "environments": {
    "test": {
      "formation": {
        "test": {
          "size": "standard-2x",
          "quantity": 1
        }
      },
      "addons": ["heroku-postgresql:in-dyno"],
      "scripts": {
        "postdeploy": "bundle exec rails assets:precompile",
        "test": "bundle exec rspec"
      }
    },
    "review": {
      "addons": ["heroku-postgresql:mini"],
      "scripts": {
        "postdeploy": "rails db:schema:load db:seed",
        "test": "bundle exec rspec"
      },
      "env": {
        "DAY_TO_SEND_INVITES": "monday",
        "EMAIL_DOMAIN": "vibereport.app"
      }
    }
  }
}
