{
  "environments": {
    "test": {
      "formation": {
        "test": {
          "size": "standard-2x",
          "quantity": 1
        }
      },
      "addons": ["heroku-postgresql:in-dyno"],
      "scripts": {
        "postdeploy": "bundle exec rails assets:precompile",
        "test": "bundle exec rspec"
      }
    },
    "review": {
      "addons": ["heroku-postgresql:mini", "mailtrap:unpaid"],
      "buildpacks": [
        {
          "url": "heroku/nodejs"
        },
        {
          "url": "heroku/ruby"
        }
      ],
      "scripts": {
        "postdeploy": "rails db:schema:load db:seed"
      },
      "env": {
        "DAY_TO_SEND_INVITES": {
          "description": "The day of the week to send out invites, monday through sunday",
          "value": "monday"
        },
        "EMAIL_DOMAIN": {
          "description": "The domain URL that emails get sent from by the environment",
          "value": "vibereport.app"
        },
        "DISABLE_DATABASE_ENVIRONMENT_CHECK": {
          "description": "Prevents bogus errors from Heroku thinking the build failed",
          "value": "1"
        }
      }
    }
  }
}
